        <Label Content="Leagues" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="115,81,0,0" VerticalAlignment="Top" Width="75" Height="32"/>
        <Label Content="Divisions" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="195,81,0,0" VerticalAlignment="Top" Width="75" Height="32"/>
        <Button Content="Set League" HorizontalAlignment="Left" Margin="115,294,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Set Division" HorizontalAlignment="Left" Margin="195,294,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.539,0.128"/>
        <Button Content="Edit League" HorizontalAlignment="Left" Margin="115,269,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.088,0.153"/>
        <Button Content="Edit Division" HorizontalAlignment="Left" Margin="195,269,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Setup Season" HorizontalAlignment="Left" Margin="333,91,0,0" VerticalAlignment="Top" Width="110" Height="34"/>
        <Button Content="Create New Division" HorizontalAlignment="Left" Margin="333,172,0,0" VerticalAlignment="Top" Width="110" Height="34" RenderTransformOrigin="0.337,3.002"/>
        <Button Content="Delete Division" HorizontalAlignment="Left" Margin="333,255,0,0" VerticalAlignment="Top" Width="110" Height="34"/>
    </Grid>
</Window>
